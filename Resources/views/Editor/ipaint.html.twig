	               <input type="radio" id="ruler_unit_in" name="ruler_unit" value="in" /><label for="ruler_unit_in">in</label>
	            </div>
	            <div class="tb_title">{% trans with {} from "ipaint" %}Ruler{% endtrans %}</div>
	         </div>
	         <div class="tb_v_bar"></div>
