		            <div name="curve"                       title="{% trans with {} from "ipaint"  %}Curve{% endtrans %}"                       class="canvas_tool_shape button_19x18 shape_curve        "></div>
		            <div name="oval"                        title="{% trans with {} from "ipaint"  %}Oval{% endtrans %}"                        class="canvas_tool_shape button_19x18 shape_oval         "></div>
		            <div name="rectangle"                   title="{% trans with {} from "ipaint"  %}Rectangle{% endtrans %}"                   class="canvas_tool_shape button_19x18 shape_box          "></div>
		            <div name="rounded_rectangle"           title="{% trans with {} from "ipaint"  %}Rounded rectangle{% endtrans %}"           class="canvas_tool_shape button_19x18 shape_round_box    "></div>
